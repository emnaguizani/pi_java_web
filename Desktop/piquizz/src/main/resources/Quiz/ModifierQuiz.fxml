<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="esprit.tn.controllers.Quiz.ModifierQuizController">
    <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
        <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #3b28cc;" text="UPDATE QUIZ" />

        <Label style="-fx-font-size: 14; -fx-text-fill: #3b28cc;" text="Quiz Title:" />
        <TextField fx:id="titleField" promptText="Enter Quiz Title" style="-fx-pref-width: 300; -fx-padding: 5;" />

        <Label style="-fx-font-size: 14; -fx-text-fill: #3b28cc;" text="Quiz Description:" />
        <TextArea fx:id="descriptionField" promptText="Enter Quiz Description" style="-fx-pref-width: 300; -fx-pref-height: 100; -fx-padding: 5;" />

        <Label style="-fx-font-size: 14; -fx-text-fill: #3b28cc;" text="Duration (min):" />
        <TextField fx:id="durationField" promptText="Enter Duration (min)" style="-fx-pref-width: 300; -fx-padding: 5;" />

        <Label style="-fx-font-size: 14; -fx-text-fill: #3b28cc;" text="Total Score:" />
        <TextField fx:id="totalScoreField" promptText="Enter Total Score" style="-fx-pref-width: 300; -fx-padding: 5;" />

        <Label style="-fx-font-size: 14; -fx-text-fill: #3b28cc;" text="Author Name:" />
        <TextField fx:id="authorField" promptText="Enter Author Name" style="-fx-pref-width: 300; -fx-padding: 5;" />

        <HBox alignment="CENTER" spacing="15">
            <Button onAction="#saveQuiz" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-width: 100; -fx-padding: 5;" text="Save" />
            <Button onAction="#cancelQuiz" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-pref-width: 100; -fx-padding: 5;" text="Cancel" />
        </HBox>
    </VBox>
</AnchorPane>
