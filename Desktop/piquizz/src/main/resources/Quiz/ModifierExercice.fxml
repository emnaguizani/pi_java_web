<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.Quiz.ModifierExerciceController">
    <VBox alignment="CENTER" prefHeight="500" prefWidth="400" spacing="10" style="-fx-padding: 20;">
        <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" text="UPDATE EXERCICE" />

        <Label text="Question:" />
        <TextField fx:id="questionField" promptText="Entrez la question" />

        <Label text="Options(comma separated):" />
        <TextField fx:id="optionsField" promptText="Option1,Option2,Option3" />

        <Label text="Correct Answer:" />
        <TextField fx:id="correctAnswerField" promptText="Entrez la rÃ©ponse correcte" />

        <Label text="Score" />
        <TextField fx:id="scoreField" promptText="Entrez le score" />

        <Label text="Image Path:" />
        <TextField fx:id="imagePathField" promptText="Entrez le chemin de l'image" />

        <CheckBox fx:id="mandatoryCheckBox" text="Obligatoire" />

        <HBox alignment="CENTER" spacing="10">
