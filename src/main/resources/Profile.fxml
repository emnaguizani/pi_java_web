<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="esprit.tn.controllers.Profile"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="50">
            <Label text="User Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <HBox spacing="10">
                <Label text="Full Name:"/>
                <Label fx:id="fullnameLabel" text=""/>
            </HBox>

            <HBox spacing="10">
                <Label text="Email:"/>
                <Label fx:id="emailLabel" text=""/>
            </HBox>

            <HBox spacing="10">
                <Label text="Date of Birth:"/>
                <Label fx:id="dateOfBirthLabel" text=""/>
            </HBox>

            <HBox spacing="10">
                <Label text="Role:"/>
                <Label fx:id="roleLabel" text=""/>
            </HBox>

            <Button fx:id="getBackid" text="Back" onAction="#goBack" />
            <Button fx:id="editid" text="edit" onAction="#editProfile" />
        </VBox>
    </children>
</AnchorPane>
