<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AfficherCoursController">
    <Pane layoutX="-6.0" prefHeight="45.0" prefWidth="779.0" style="-fx-background-color: #2667FF;">
        <children>
            <ImageView fitHeight="44.0" fitWidth="45.0" layoutX="14.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/Logo.PNG" />
                </image>
            </ImageView>

            <Text fill="#fffbfb" layoutX="657.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Reclamation">
                <font>
                    <Font name="Times New Roman Bold" size="12.0" />
                </font>
            </Text>
            <Text fill="#fffbfb" layoutX="603.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Seance">
                <font>
                    <Font name="Times New Roman Bold" size="12.0" />
                </font>
            </Text>
            <Text fill="#fffbfb" layoutX="545.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Cours">
                <font>
                    <Font name="Times New Roman Bold" size="12.0" />
                </font>
            </Text>
        </children>
    </Pane>


    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Courses List" />
    <TableView fx:id="courseTable">
        <columns>
            <TableColumn fx:id="titleColumn" prefWidth="150" text="Title" />
            <TableColumn fx:id="descriptionColumn" prefWidth="200" text="Description" />
            <TableColumn fx:id="dateColumn" prefWidth="120" text="Creation Date" />
            <TableColumn fx:id="statusColumn" prefWidth="100" text="Statut" />
            <TableColumn fx:id="levelColumn" prefWidth="100" text="Level" />
            <TableColumn fx:id="videoColumn" prefWidth="200" text="Course Videos" />
            <TableColumn fx:id="modifyColumn" prefWidth="100" text="Update" />
            <TableColumn fx:id="deleteColumn" prefWidth="100" text="Delete" />
        </columns>
    </TableView>
</VBox>
