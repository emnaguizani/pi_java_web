<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AjouterCommunauteController">
   <children>
      <Pane prefHeight="45.0" prefWidth="779.0" style="-fx-background-color: #2667FF;">
         <children>
            <ImageView fitHeight="44.0" fitWidth="45.0" layoutX="14.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/logoPi.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="34.0" fitWidth="31.0" layoutX="734.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/user.png" />
               </image>
            </ImageView>
            <Text fill="#fffbfb" layoutX="657.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Reclamation">
               <font>
                  <Font name="Times New Roman Bold" size="12.0" />
               </font>
            </Text>
            <Text fill="#fffbfb" layoutX="603.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Seance">
               <font>
                  <Font name="Times New Roman Bold" size="12.0" />
               </font>
            </Text>
            <Text fill="#fffbfb" layoutX="545.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Cours">
               <font>
                  <Font name="Times New Roman Bold" size="12.0" />
               </font>
            </Text>
         </children>
      </Pane>
      <Text fill="#002fff" layoutX="287.0" layoutY="91.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 20px;" text="Create Your Community " wrappingWidth="303.15234375">
