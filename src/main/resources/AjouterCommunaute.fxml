      <!-- Community Description -->
      <Label layoutX="50.0" layoutY="160.0" text="Description:" />
      <TextArea fx:id="communityDescriptionField" layoutX="180.0" layoutY="160.0" prefWidth="300.0" prefHeight="60.0" />

      <!-- Creator ID -->
      <Label layoutX="50.0" layoutY="240.0" text="Creator ID:" />
