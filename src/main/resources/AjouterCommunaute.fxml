      <!-- Members Selection -->
      <Label layoutX="50.0" layoutY="280.0" text="Select Members (1-20):" />
      <ListView fx:id="membersListView" layoutX="180.0" layoutY="280.0" prefWidth="300.0" prefHeight="100.0" />

      <!-- Create Button -->
      <Button fx:id="createButton" layoutX="250.0" layoutY="400.0" text="Create Community" onAction="#handleCreateCommunity" />
   </children>
