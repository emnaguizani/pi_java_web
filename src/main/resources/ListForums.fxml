<AnchorPane prefHeight="595.0" prefWidth="888.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.ListForumsController">
   <children>
      <Pane layoutX="-6.0" prefHeight="45.0" prefWidth="897.0" style="-fx-background-color: #3F8EFC;">
         <children>
            <ImageView fitHeight="44.0" fitWidth="45.0" layoutX="14.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>
            <Button fx:id="myProfile" layoutX="449.0" layoutY="12.0" mnemonicParsing="false" onAction="#goToMyProfile" style="-fx-background-color: #3F8EFC;" text="My Profile" textFill="WHITE" />
            <Text fill="#fffbfb" layoutX="721.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Reclamation">
               <font>
                  <Font name="Times New Roman Bold" size="12.0" />
               </font>
            </Text>
            <Button fx:id="coursbutton" layoutX="608.0" layoutY="11.0" mnemonicParsing="false" onAction="#gotocours" style="-fx-background-color: #3F8EFC;" text="Cours" textFill="WHITE">
               <font>
                  <Font name="Times New Roman Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="seancebutton" layoutX="662.0" layoutY="12.0" mnemonicParsing="false" style="-fx-background-color: #3F8EFC;" text="Seance" textFill="WHITE">
               <font>
                  <Font name="Times New Roman Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="reclamationbutton" layoutX="713.0" layoutY="12.0" mnemonicParsing="false" style="-fx-background-color: #3F8EFC;" text="Reclamation" textFill="WHITE">
               <font>
                  <Font name="Times New Roman Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="quizbutton" layoutX="794.0" layoutY="14.0" mnemonicParsing="false" onAction="#goToQuiz" style="-fx-background-color: #3F8EFC;" text="Quiz" textFill="WHITE">
               <font>
                  <Font name="Times New Roman Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="forumbutton" layoutX="835.0" layoutY="14.0" mnemonicParsing="false" onAction="#goToForum" style="-fx-background-color: #3F8EFC;" text="Forum" textFill="WHITE">
               <font>
                  <Font name="Times New Roman Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <Button fx:id="CreateButton" layoutX="756.0" layoutY="68.0" mnemonicParsing="false" onAction="#RedirectToCreateForum" text="Create a Forum" />
      <TableView fx:id="ForumsTable" layoutX="46.0" layoutY="102.0" prefHeight="459.0" prefWidth="812.0">
         <columns>
            <TableColumn fx:id="ForumTitle" prefWidth="157.0" text="Title" />
            <TableColumn fx:id="ForumDescription" prefWidth="186.0" text="Description" />
            <TableColumn fx:id="ForumDateCreation" prefWidth="130.0" text="Date de creation" />
            <TableColumn fx:id="ForumLikesDislikes" prefWidth="136.0" text="Likes/Dislikes" />
            <TableColumn fx:id="ForumActions" prefWidth="201.0" text="Actions" />
         </columns>
      </TableView>
      <Button fx:id="goToListcommunautes" layoutX="614.0" layoutY="68.0" mnemonicParsing="false" onAction="#RedirectToListCommunautes" prefHeight="25.0" prefWidth="114.0" text="Your Communities" />
   </children>
</AnchorPane>
