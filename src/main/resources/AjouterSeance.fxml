<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.tn.controllers.AjouterSeanceController"
            stylesheets="@css/style.css"
            prefHeight="300.0" prefWidth="350.0">

    <children>
        <Label layoutX="20" layoutY="20" text="Titre :" />
        <TextField fx:id="titreId" layoutX="120" layoutY="20" prefWidth="200" promptText="Titre de la séance"/>

        <Label layoutX="20" layoutY="60" text="Contenu :" />
        <TextField fx:id="contenuId" layoutX="120" layoutY="60" prefWidth="200" promptText="Description"/>

        <Label layoutX="20" layoutY="100" text="Date :" />
        <DatePicker fx:id="datePicker" layoutX="120" layoutY="100" prefWidth="200"/>

        <Label layoutX="20" layoutY="140" text="Heure :" />
        <ComboBox fx:id="hourComboBox" layoutX="120" layoutY="140" prefWidth="200"/>

        <Label layoutX="20" layoutY="180" text="ID Formateur :" />
        <TextField fx:id="idFormateurId" layoutX="120" layoutY="180" prefWidth="200" promptText="Ex: 1"/>

        <Button layoutX="20" layoutY="230" onAction="#ajouterSeance" text="Ajouter" prefWidth="100"/>
        <Button layoutX="140" layoutY="230" onAction="#afficherSeances" text="Voir Séances" prefWidth="120"/>
    </children>
</AnchorPane>
