         <TextField fx:id="descriptionid" promptText="Enter description" style="-fx-padding: 8; -fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-radius: 5px; -fx-border-color: #ccc; -fx-border-width: 1px;" />

         <Label style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Duration (minutes)" />
         <TextField fx:id="durationid" promptText="Enter duration" style="-fx-padding: 8; -fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-radius: 5px; -fx-border-color: #ccc; -fx-border-width: 1px;" />

         <Label style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Total Score" />
         <TextField fx:id="totalScoreid" promptText="Enter total score" style="-fx-padding: 8; -fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-radius: 5px; -fx-border-color: #ccc; -fx-border-width: 1px;" />

         <Label style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Date" />
