         <Label style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-font-weight: bold;" text="Author" />
         <TextField fx:id="authorid" promptText="Enter author's name" style="-fx-padding: 8; -fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-radius: 5px; -fx-border-color: #ccc; -fx-border-width: 1px;" />

         <Label fx:id="error" style="-fx-text-fill: #ff4444; -fx-font-size: 12px; -fx-padding: 5; -fx-visible: false;" text="Error Message" />


         <HBox alignment="CENTER" spacing="15">
            <Button fx:id="ajouterButton" onAction="#handleAjouterAction" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 12 20; -fx-font-size: 14px; -fx-border-radius: 5px; -fx-min-width: 100px; -fx-cursor: hand;" text="ADD" />
