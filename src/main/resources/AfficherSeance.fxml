<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="esprit.tn.controllers.AfficherSeanceController">
    <children>
        <Label layoutX="30" layoutY="20" text="Rechercher :" />
        <TextField fx:id="searchField" layoutX="120" layoutY="20" promptText="Titre ou Date (yyyy-MM-dd)" />
        <Button layoutX="300" layoutY="20" text="Rechercher" onAction="#rechercherSeance" />
        <Button layoutX="400" layoutY="20" text="RÃ©initialiser" onAction="#resetSearch" />

        <TableView fx:id="tableView" layoutX="30" layoutY="60" prefHeight="300" prefWidth="500">
            <columns>
                <TableColumn fx:id="idSeance" text="ID" prefWidth="50"/>
                <TableColumn fx:id="titre" text="Titre" prefWidth="100"/>
                <TableColumn fx:id="contenu" text="Contenu" prefWidth="150"/>
                <TableColumn fx:id="datetime" text="Date &amp; Heure" prefWidth="120"/>

                <TableColumn fx:id="idFormateur" text="ID Formateur" prefWidth="80"/>
            </columns>
        </TableView>

        <Button layoutX="30" layoutY="380" text="Retour" onAction="#retour"/>
    </children>
</AnchorPane>
